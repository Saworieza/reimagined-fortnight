<div class="ui-block">
	<div class="ui-block-title">
		<h6 class="title"> Friend Suggestions</h6>
		<a class="more title" href="<%= users_path %>">More</a>
	</div>
	<ul class="widget w-friend-pages-added notification-list friend-requests" >
		<% @suggestions.each do |user| %>
		<li class="inline-items">
			<div class="author-thumb">
				<%= image_tag 'avatar.jpg' %>
			</div>
			<div class="notification-event">
				<%= link_to user.name, user_path(user), class: "h6 notification-friend" %>
				<span class="user-<%= user.id %>">
          <%# in user.verified, the first '' is verfied n the 2 is unverified %>
          <%= link_to "#{ user.verified ? '' : '' }", verified_user_path(user), method: :patch, remote: :true, style: "pointer-events: none;", class: "fa fa-#{ user.verified ? 'check-circle' : '' }"  %>
        </span>
				<br>
				<span class="chat-message-item">@<%= user.username %></span>
			</div>
				<% if user_signed_in? %>
					<span class="notification-icon">
						<a class="accept-request fa fa-user-plus" href="<%= user_path(user)%>">
							<span class=" without-text fa-user-class"></span>
						</a>
					</span>
				<% end %>
			<% end %>
		</li>
	</ul>
</div>



