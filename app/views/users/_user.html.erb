<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12" style="padding: 5px;">
  <div class="ui-block">
    <div class="friend-item">
      <div class="friend-header-thumb">
        <%= image_tag user.cover.url(:medium) %>
      </div>
      <div class="friend-item-content">
        <div class="more fa fa-ellipsis-h"></div>
        <div class="friend-avatar">
          <div class="author-thumb">
            <%= image_tag user.avatar.url %>
          </div>
          <div class="author-content">
            <%= link_to user.name, user_path(user), class: "h5 author-name" %>
            <span class="user-<%= user.id %>">
              <%# This is a comment. in user.verified, the first '' is verfied n the 2 is unverified %>
              <%= link_to "#{ user.verified ? '' : '' }", verified_user_path(user), method: :patch, remote: :true, style: "pointer-events: none;", class: "fa fa-#{ user.verified ? 'check-circle' : '' }"  %>
